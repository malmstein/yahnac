<?xml version="1.0" encoding="utf-8"?>

<com.malmstein.yahnac.views.FooterWithTopDividerLayout xmlns:android="http://schemas.android.com/apk/res/android"
  style="@style/HNews.FeedFooter"
  android:layout_width="match_parent"
  android:layout_height="@dimen/button_root_height"
  android:orientation="horizontal">

  <ImageButton
    android:id="@+id/article_share_action"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    style="@style/HNews.FeedAction"
    android:src="@drawable/ic_share_grey600_24dp" />

  <ImageButton
    android:id="@+id/article_bookmark_action"
    android:layout_toRightOf="@id/article_share_action"
    android:layout_toEndOf="@id/article_share_action"
    style="@style/HNews.FeedAction"
    android:src="@drawable/selector_bookmark" />

  <ImageButton
    android:id="@+id/article_comments_action"
    android:layout_toRightOf="@id/article_bookmark_action"
    android:layout_toEndOf="@id/article_bookmark_action"
    style="@style/HNews.FeedAction"
    android:src="@drawable/ic_comment_grey600_24dp" />

  <ImageButton
    android:id="@+id/article_external_action"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    style="@style/HNews.FeedAction"
    android:src="@drawable/ic_exit_to_app_grey600_24dp" />


</com.malmstein.yahnac.views.FooterWithTopDividerLayout>